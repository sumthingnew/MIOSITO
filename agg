    <script>
        function updateSim(val) {
            const revenue = val ? parseFloat(val) : parseFloat(document.querySelector('input[type=range]').value);
            const coef = parseFloat(document.getElementById('ateco').value);
            const rate = parseFloat(document.getElementById('rate').value);
            
            document.getElementById('rev-val').innerText = `€ ${revenue.toLocaleString('it-IT')}`;
            
            // Logica Regime Forfettario
            const taxable = revenue * coef;
            const inps = taxable * 0.2607; // Gestione Separata INPS indicativa
            const tax = (taxable - inps) * rate;
            const netYear = revenue - inps - tax;
            const netMonth = netYear / 12;

            document.getElementById('net-monthly').innerText = `€ ${Math.round(netMonth).toLocaleString('it-IT')}`;
            document.getElementById('tax-total').innerText = `€ ${Math.round(tax).toLocaleString('it-IT')}`;
            document.getElementById('inps-total').innerText = `€ ${Math.round(inps).toLocaleString('it-IT')}`;
        }

        window.onload = () => {
            lucide.createIcons();
            updateSim(50000);
        };
    </script>
